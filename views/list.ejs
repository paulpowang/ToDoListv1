<%- include("header") -%>
<div class="box" id="heading">
  <h1><%= kindOfDay %></h1>
</div>
<div class="box">
  <h2>Your To Do List</h2>
  <% for(let item of newListItems){%>
  <div class="item">
    <% if(item !=="No items"){%>
    <input type="checkbox" />
    <% } %>

    <p><%= item %></p>
  </div>

  <% } %>

  <form class="item" action="/" method="POST">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit">+</button>
  </form>
</div>
<%- include("footer") -%>
